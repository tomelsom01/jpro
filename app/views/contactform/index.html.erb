
<div class="contactformbackground">
  <h1 class="text-center textwhite">Contact me</h1>

 <div class="container pt-3">
  <article class="card-body mx-auto" style="max-width: 400px;">
    <div class="row bg-white rounded">
      <div class="card card-signup p-3">
        <%= simple_form_for(@correspondence) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :name, placeholder: "Full Name" %>
            <%= f.input :email, placeholder: "Email" %>
            <%= f.input :streetaddress, placeholder: "Street Address" %>
            <%= f.input :city, placeholder: "City" %>
            <%= f.input :postcode, placeholder: "Postcode" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Send Message", class: "btn btn-outline-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </article>
</div>

</div>
