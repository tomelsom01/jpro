
<div class="contactformbackground">
  <h1 class="text-center textwhite size3">Contact me</h1>

 <div class="container-fluid pt-5">
  <article class="row justify-content-center">
    <div class="col-xxl-10">
      <div class="card card-signup p-3">
        <%= simple_form_for(@correspondance) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :name, placeholder: "Full Name" %>
            <%= f.input :email, placeholder: "Email" %>
            <%= f.input :message, placeholder: "Message" %>

          </div>
          <div class="form-actions">
            <%= f.button :submit, "Send Message", class: "btn btn-outline-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </article>
</div>

</div>
